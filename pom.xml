<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Avoid making changes to this file, it has to be deployed manually -->
    <groupId>com.wyvern</groupId>
    <artifactId>wyvern-parent</artifactId>
    <version>1.18.1</version>
    <packaging>pom</packaging>

    <name>Wyvern-Parent</name>
    <description>Parent project for all Wyvern modules.</description>

    <modules>
        <module>Wyvern-Server</module>
        <module>Wyvern-API</module>
    </modules>

    <build>
        <defaultGoal>clean install</defaultGoal>
    </build>

    <properties>
        <maven.compiler.source>16</maven.compiler.source>
        <maven.compiler.target>16</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>